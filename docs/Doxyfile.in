PROJECT_NAME           = "CommonRoad C++ Environment Model"

PROJECT_BRIEF          = "Classes and methods to represent the CommonRoad format in C++17"
PROJECT_LOGO           = @CMAKE_SOURCE_DIR@/docs/commonroad_logo.svg

STRIP_FROM_PATH        = @PROJECT_SOURCE_DIR@

OUTPUT_DIRECTORY       = @CMAKE_CURRENT_BINARY_DIR@/doc_doxygen/

INPUT                  = @PROJECT_SOURCE_DIR@/src \
                         @PROJECT_SOURCE_DIR@/README.md

FILE_PATTERNS          = *.h \
                         *.cpp \
                         *.md

# Don't generate documentation for pugi_xml
EXCLUDE                = @PROJECT_SOURCE_DIR@/src/commonroad_cpp/interfaces/commonroad/pugi_xml

RECURSIVE              = YES


# EXTRACT_ALL           = NO # default NO
# EXTRACT_PRIVATE       = NO # default NO
EXTRACT_PACKAGE         = YES # default NO
EXTRACT_STATIC          = YES # default NO
# EXTRACT_LOCAL_CLASSES = YES # default YES
# EXTRACT_LOCAL_METHODS = NO # default NO
EXTRACT_ANON_NSPACES    = YES # default NO
# HIDE_UNDOC_MEMBERS    = NO # default NO
# HIDE_UNDOC_CLASSES    = NO # default NO
# HIDE_FRIEND_COMPOUNDS = NO # default NO
# HIDE_IN_BODY_DOCS     = NO # default NO

JAVADOC_AUTOBRIEF      = YES # default NO


# Show undocumented entities
EXTRACT_ALL = YES

# Reduce verbosity so that important warnings are more visible
QUIET                  = YES # default NO
#WARNINGS              = YES # default YES
#WARN_IF_UNDOCUMENTED  = YES # default YES
#WARN_IF_DOC_ERROR     = YES # default YES
WARN_NO_PARAMDOC       = YES # default NO


# Macro expansion settings:
MACRO_EXPANSION        = YES
INCLUDE_PATH           = @PROJECT_SOURCE_DIR@/src

TEMPLATE_RELATIONS     = YES
HAVE_DOT               = YES

# Only generate HTML output
GENERATE_HTML          = YES
GENERATE_LATEX         = NO
GENERATE_XML           = NO

# Use README.md as main page
USE_MDFILE_AS_MAINPAGE = @CMAKE_SOURCE_DIR@/README.md

# Enable Clang-assisted parsing (if available)
CLANG_ASSISTED_PARSING = YES
CLANG_DATABASE_PATH = @CMAKE_BINARY_DIR@

# Add various additional graphs (generated by Graphviz)
CALL_GRAPH = YES
CALLER_GRAPH = YES

REFERENCED_BY_RELATION = YES
REFERENCES_RELATION = YES


# Enable tree view on the left
GENERATE_TREEVIEW = YES

# Dynamic sections (show/hide various graphs)
HTML_DYNAMIC_SECTIONS = YES

# Full source browser
SOURCE_BROWSER = YES

HTML_EXTRA_STYLESHEET = @CMAKE_SOURCE_DIR@/docs/doxygen_extra.css

# Enable MathJax for improved formula rendering
USE_MATHJAX = YES
MATHJAX_VERSION = MathJax_3

# Use SVG (instead of PNG) as Graphviz/dot output format
DOT_IMAGE_FORMAT = svg

# Enable SVG pan/zoom controls
INTERACTIVE_SVG = YES

# Generate cppreference links for references to standard library types
TAGFILES = @DOXYGEN_CPPREFERENCE_TAG_FILE@=http://en.cppreference.com/w/
